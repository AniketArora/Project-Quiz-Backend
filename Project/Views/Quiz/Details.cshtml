@model Project.Models.Quiz

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuizName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuizName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Difficulty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Difficulty)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ThemeColor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ThemeColor)
        </dd>
    </dl>

    @foreach (QuizQuestion qq in Model.QuizQuestions) {
        @if (qq.QuizId == Model.Id) {
            <partial name="_Details_Question.cshtml" model="qq.Question" />
            @foreach (QuestionAnswer qa in qq.Question.QuestionAnswers) {
                if (qa.QuestionId == qq.Question.Id) {
                    <partial name="_Details_Answer.cshtml" model="qa.Answer" />
                }
            }
        }
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
